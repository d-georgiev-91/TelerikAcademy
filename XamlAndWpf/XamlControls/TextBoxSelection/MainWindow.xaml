<Window x:Class="TextBoxSelection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <WrapPanel>
                <Label Content="Input text: " />
                <TextBox Width="400"
                         Height="250"
                         Name="textBox"
                         AcceptsReturn="True"
                         SelectionChanged="TextBoxSelectionChanged">
                </TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label Content="Selected text: " />
                <TextBlock Name="selectedText"></TextBlock>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
