<Window x:Class="ItemCollectionVisualisation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <ComboBox Name="itemsContainer" SelectionChanged="VisualiseSelectedItem">
            <ComboBoxItem>Pesho 1</ComboBoxItem>
            <ComboBoxItem>Pesho 2</ComboBoxItem>
            <ComboBoxItem>Pesho 3</ComboBoxItem>
            <ComboBoxItem>Pesho 4</ComboBoxItem>
            <ComboBoxItem>Pesho 5</ComboBoxItem>
        </ComboBox>
        <Label Name="currentSelection">You have selected: </Label>
    </StackPanel>
</Window>
