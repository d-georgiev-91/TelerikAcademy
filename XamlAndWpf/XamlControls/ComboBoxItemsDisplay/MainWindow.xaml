<Window x:Class="ComboBoxItemsDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="700">
    <StackPanel Orientation="Horizontal">
        <ComboBox Width="200" 
                  Name="Choices"  
                  ScrollViewer.CanContentScroll="True"
                  SelectionChanged="ChoicesSelectionChanged">
            <ComboBoxItem Height="100">
                <TextBlock Text="Az sym Pesho i idvam ot daleko!"/>
            </ComboBoxItem>
            <ComboBoxItem Height="100">
                <Image Source="Images\jessica.jpg"/>
            </ComboBoxItem>
            <ComboBoxItem Height="100">
                <Ellipse Fill="Green" Width="50" Height="80"/>
            </ComboBoxItem>
        </ComboBox>
        <Label Name="Output"></Label>
    </StackPanel>
</Window>
